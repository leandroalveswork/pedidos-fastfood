<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PedidosMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
</head>
<body>
    @if ((ViewData["EsconderNavs"]?.ToString() ?? "N") != "S") {
        <header>
            <nav class="d-flex justify-content-around bg-pfast-nav">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-white text-decoration-none p-2" onclick="loadingModal.bloquearUi(); return true;">Home</a>
                <a asp-area="" asp-controller="Bebida" asp-action="Index" class="text-white text-decoration-none p-2" onclick="loadingModal.bloquearUi(); return true;">Bebida</a>
                <a asp-area="" asp-controller="Lanche" asp-action="Index" class="text-white text-decoration-none p-2" onclick="loadingModal.bloquearUi(); return true;">Lanche</a>
                <a asp-area="" asp-controller="Pedido" asp-action="Index" class="text-white text-decoration-none p-2" onclick="loadingModal.bloquearUi(); return true;">Pedido</a>
            </nav>
        </header>
    }
    <main role="main" class="p-3">
        @RenderBody()
    </main>
    
    @* Modal Alerta *@

    <div class='modal fade' id='alertaModal' tabindex='-1'>
        <div class='modal-dialog'>
            <div class='modal-content'>
                <div class='modal-header'>
                    <h3 id='tituloAlertaModal' class='m-0'></h3>
                    <button type='button' class='btn-close' data-bs-dismiss='modal'></button>
                </div>
                <div class='modal-body'>
                    <span id='iconeAlertaModal' class='text-center d-block icone-grande mb-4'></span>
                    <span id='mensagemAlertaModal' class='text-center d-block'></span>
                </div>
                <div class='modal-footer'>
                    <button type='button' class='border-0 bg-pfast-nav p-2 text-white btn-tamanho-minimo' data-bs-dismiss='modal'>Ok</button>
                </div>
            </div>
        </div>
    </div>
    
    @* Modal Confirmar *@

    <div class='modal fade' id='confirmarModal' tabindex='-1'>
        <div class='modal-dialog'>
            <div class='modal-content'>
                <div class='modal-header'>
                    <h3 id='tituloConfirmarModal' class='m-0'></h3>
                    <button type='button' class='btn-close' data-bs-dismiss='modal'></button>
                </div>
                <div class='modal-body'>
                    <span id='mensagemConfirmarModal' class='text-center d-block'></span>
                </div>
                <div class='modal-footer'>
                    <button type='button' class='border border-2 border-dark p-2 bg-white btn-tamanho-minimo' data-bs-dismiss='modal'>Não</button>
                    <button type='button' class='border-0 bg-pfast-nav p-2 text-white btn-tamanho-minimo ms-2' onclick='confirmarModal.callbackAposSim();'>Sim</button>
                </div>
            </div>
        </div>
    </div>

    @* Loading *@

    <div class='modal' id='loadingModal' tabindex='-1' data-bs-backdrop='static' data-bs-keyboard='false'>
        <div class='modal-dialog modal-dialog-centered d-flex justify-content-center'>
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/inputmask/jquery.inputmask.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
